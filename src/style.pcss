/* cyrillic 400 */
@font-face {
    font-family: 'Cuprum';
    font-style: normal;
    font-weight: normal;
    src: url('/fonts/cuprum_400_cyr.woff2') format('woff2');
    unicode-range: U+0301, U+0400-045F, U+0490-0491, U+04B0-04B1, U+2116;
}
